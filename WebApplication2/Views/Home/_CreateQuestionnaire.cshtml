@using WebApplication2.Models.Enum;
@using WebApplication2.ViewModels;
@model CreateQuestionnaireViewModel

<input data-repeater-create type="button" class="btn btn-success inner" value="Add Question" id="btn1" />



<div class="row">
    <div class="col-lg-12">
        <div id="addproduct-accordion" class="custom-accordion">
            <div class="card">
                <a href="#addproduct-billinginfo-collapse" class="text-dark" data-bs-toggle="collapse" aria-expanded="true" aria-controls="addproduct-billinginfo-collapse">
                    <div class="p-4">

                        <div class="media align-items-center">
                            <div class="me-3">
                                <div class="avatar-xs">
                                    <div class="avatar-title rounded-circle bg-soft-primary text-primary">
                                        01
                                    </div>
                                </div>
                            </div>
                            <div class="media-body overflow-hidden">
                                <h5 class="font-size-16 mb-1">Billing Info</h5>
                                <p class="text-muted text-truncate mb-0">Fill all information below</p>
                            </div>
                            <i class="mdi mdi-chevron-up accor-down-icon font-size-24"></i>
                        </div>

                    </div>
                </a>

                <div id="addproduct-billinginfo-collapse" class="collapse show" data-bs-parent="#addproduct-accordion">
                    <div class="p-4 border-top">
                        @* <form>*@
                        @if (Model == null || Model.questionViewModels == null || Model.questionViewModels.Count == 0)
                        {
                            <div class="mb-3">
                                <label class="form-label" for="question">Text</label>
                                <input class="form-control" id="question" name="questionViewModels[0].question" />
                            </div>

                            <div class="row">
                                <div class="col-lg-4">

                                    <div class="mb-3">
                                        <label class="form-label" for="gradingType">gradingType</label>
                                        <select for="gradingType" asp-items="@Html.GetEnumSelectList<GradingType>()">
                                            <option>--Select--</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-4">

                                    <div class="mb-3">
                                        <label class="form-label" for="comentary">Text</label>
                                        <input class="form-control" id="comentary" name="questionViewModels[0].comentary" />
                                    </div>
                                </div>
                            </div>
                        }
                        else if (Model.questionViewModels != null && Model.questionViewModels.Count > 0)
                        {
                            @for (var i = 0; i < Model.questionViewModels.Count; i++)
                            {

                                <div class="mb-3">
                                    <label class="form-label" asp-for="questionViewModels[@i].question">Text</label>
                                    <input class="form-control" asp-for="@Model.questionViewModels[@i].question" />
                                </div>

                                <div class="row">
                                    <div class="col-lg-4">

                                        <div class="mb-3">
                                            <label class="form-label" asp-for="questionViewModels[@i].gradingType">gradingType</label>
                                            <select for="gradingType" asp-items="@Html.GetEnumSelectList<GradingType>()">
                                                <option>--Select--</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">

                                        <div class="mb-3">
                                            <label class="form-label" asp-for="questionViewModels[@i].comentary">Comentary</label>
                                            <input class="form-control" asp-for="@Model.questionViewModels[@i].comentary" />
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        @*</form>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


